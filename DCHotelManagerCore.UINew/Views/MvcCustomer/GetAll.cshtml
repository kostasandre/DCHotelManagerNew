@using DCHotelManagerCore.Lib.Models.Persistent
@model IList<DCHotelManagerCore.Lib.Models.Persistent.Customer>
@{
    ViewBag.Title = "title";
    Layout = "_Layout";
}

<h2>Customers</h2>
<form id="deleteCustomerForm" asp-controller="MvcCustomer" asp-action="Delete" aspmethod="post">



    @for (int i = 0; i < Model.Count(); i++)
    {
        <div class="col-sm-4 col-md-4 col-lg-4">
            <div class="thumbnail">
                @*<img src="@hotel.ImageThumbnailUrl" alt="" />*@

                <div class="caption">

                    <h3 class="pull-right">@Model[i].Email</h3>
                    @Html.CheckBoxFor(m => Model[i].IsChecked)
                    <a asp-action="CreateOrUpdateCustomer" asp-route-name="@Model[i].Name" asp-route-surname="@Model[i].Surname" asp-route-email="@Model[i].Email" asp-route-address="@Model[i].Address" asp-route-id="@Model[i].Id">Edit</a>
                    <h3>
                        <a>@Model[i].Name</a>
                    </h3>
                    <h3>
                        <a>@Model[i].Surname</a>
                    </h3>
                    <p>@Model[i].Address</p>
                </div>
            </div>

            @Html.HiddenFor(m => Model[i].Id)
            @Html.HiddenFor(m => Model[i].Address)
            @Html.HiddenFor(m => Model[i].Created)
            @Html.HiddenFor(m => Model[i].CreatedBy)
            @Html.HiddenFor(m => Model[i].Deleted)
            @Html.HiddenFor(m => Model[i].DeletedBy)
            @Html.HiddenFor(m => Model[i].Email)
            @Html.HiddenFor(m => Model[i].Surname)
            @Html.HiddenFor(m => Model[i].Name)
            @Html.HiddenFor(m => Model[i].Phone)
            @Html.HiddenFor(m => Model[i].TaxId)
            @Html.HiddenFor(m => Model[i].Updated)
            @Html.HiddenFor(m => Model[i].UpdatedBy)
            @Html.HiddenFor(m => Model[i].Email)
            @Html.HiddenFor(m => Model[i].IsChecked)
            
        </div>
    }


    <input id="deleteCustomer" type="submit" value="Delete" onclick="return requiredFields();"/>
    
    <div id="divProcessing">
        <p>Processing, please wait . . . <img src="/images/25.gif" alt="" /></p>
    </div>
</form>
