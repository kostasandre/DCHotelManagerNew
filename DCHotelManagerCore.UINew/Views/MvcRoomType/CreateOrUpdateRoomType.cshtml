@using Microsoft.AspNetCore.Mvc.Razor
@using Microsoft.AspNetCore.Mvc.ViewFeatures
@model DCHotelManagerCore.Lib.Models.Persistent.RoomType

@{
    ViewBag.Title = "RoomType";
    Layout = "_Layout";
}

<h2>Rooms</h2>

<form asp-controller="MvcRoomType" asp-action="Create" method="post">

    <label>Bed Type</label>
    @Html.TextBoxFor(model => model.BedType)
    <label>Code</label>
    @Html.TextBoxFor(model => model.Code)
    <label>View</label>
    @Html.TextBoxFor(model => model.View)
    <label>Shauna</label>
    @Html.CheckBoxFor(model => Model.Sauna)
    <label>Tv</label>
    @Html.CheckBoxFor(model => Model.Tv)
    <label>Wif-Fi</label>
    @Html.CheckBoxFor(model => model.WiFi)

